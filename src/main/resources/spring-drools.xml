<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:kie="http://drools.org/schema/kie-spring"
	xsi:schemaLocation="
	http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://drools.org/schema/kie-spring http://drools.org/schema/kie-spring.xsd
	">

	<kie:kmodule id="kmodule">
		<kie:kbase name="item" packages="rules.price.item">
			<kie:ksession name="item" />
		</kie:kbase>
		<kie:kbase name="shipping" packages="rules.price.shipping">
			<kie:ksession name="shipping" />
		</kie:kbase>

	</kie:kmodule>

	<bean id="kiePostProcessor" class="org.kie.spring.annotations.KModuleAnnotationPostProcessor" />

</beans>